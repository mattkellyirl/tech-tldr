<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="css/stylesheet.css" />
    <title>{{title}}</title>
  </head>

  <body class="flex flex-col min-h-screen">
    <!--Navigation Bar-->
    <nav class="bg-gray-100 border">
      <div
        class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
      >
        <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
          <h2
            class="self-center text-2xl font-bold tracking-tight text-gray-900"
          >
            Tech TL;DR
            <span class="text-gray-400 font-normal">/ Your Tech Guide</span>
          </h2>
        </a>

        <!--Navigation Links-->
        <div class="w-full md:block md:w-auto">
          <ul
            class="flex flex-col font-medium mt-4 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0"
          >
            <li>
              <a
                href="#"
                class="block py-2 px-3 text-gray-400 font-semibold transition-colors duration-300 hover:text-gray-900"
                aria-current="page"
              >Home</a>
            </li>
            <li>
              <a
                href="#"
                class="block py-2 px-3 text-gray-400 font-semibold transition-colors duration-300 hover:text-gray-900"
              >Dashboard</a>
            </li>
            <li>
              <a
                href="#"
                class="block py-2 px-3 text-gray-400 font-semibold transition-colors duration-300 hover:text-gray-900"
              >Login</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!--Main-->
    <div class="container mx-auto flex flex-col p-8 items-center">

      <!--Main Container Title-->
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">
        Latest Picks
      </h1>
      <p class="text-lg text-gray-400">Stay updated with our newest TL;DRs</p>

      <!--Card Container-->
      <div class="grid gap-6 m-8">

        <!--First Card-->
        {{#each posts}}
          <div class="max-w-3xl p-6 border rounded-lg shadow bg-gray-100">
            <a href="#">
              <h3 class="tracking-tight text-gray-400">{{created_at}}
                by
                {{username}}</h3>
              <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
                {{title}}
              </h3>
            </a>
            <p class="mb-3 font-normal text-gray-500">
              {{content}}
            </p>
            <a
              href="#"
              class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-600 rounded-lg hover:bg-blue-800 transition-colors duration-300"
            >
              Read more
              <svg
                class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M1 5h12m0 0L9 1m4 4L9 9"
                />
              </svg>
            </a>
          </div>
        {{/each}}

      </div>
    </div>

    <!--Footer-->
    <footer class="footer bg-gray-100 border py-4">
      <div class="max-w-screen-xl mx-auto flex items-center justify-center">
        <p class="text-sm font-semibold text-gray-500">
          Â© 2024 Tech TLDR All Rights Reserved
        </p>
      </div>
    </footer>
  </body>
</html>